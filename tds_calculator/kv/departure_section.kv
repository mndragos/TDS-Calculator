#:kivy 1.11.1
#:include templates_rules.kv

<DepartureSection>:
    day: day
    mon: mon
    year: year
    hour: hour
    mins: mins
    tzsign: tzsign
    tzhour: tzhour
    tzmin: tzmin
    departure_checkbox: departure_checkbox
    departure_dict:{'year':year.text, 'mon':mon.text, 'day': day.text, 'hour': hour.text, 'mins': mins.text, 'tzsign': tzsign.text, 'tzhour': tzhour.text, 'tzmin': tzmin.text}
    
    orientation: 'vertical'
    spacing: designer_spacing
    size_hint_y: None
    height: '150dp'
    canvas.before:
        Color:
            hsv: 0, 0, .5
            a: 1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            hsv: 0, 0, 0
            a: 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    BoxLayout:                        # DEPARTURE LABEL
        size_hint_y: None
        height: designer_height
        padding: designer_padding
        spacing: designer_spacing
        DesignerCheckBox:
            id: departure_checkbox
        DesignerLabel:
            text: 'DEPARTURE:'
    BoxLayout:
        orientation: 'vertical'
        spacing: designer_spacing
        padding: designer_padding
        BoxLayout:
            size_hint_y: None
            height: designer_height
            DesignerLabel:
                text: 'DATE:'
        BoxLayout:                            # DEPARTURE DATE INPUT
            size_hint_y: None
            height: designer_height
            DesignerTextInput:
                id: day
                hint_text: 'DD'
                input_filter: 'int'
                text: 
            DesignerLabelTitle:
                size_hint_x: .1
                text: '-'
            DesignerTextInput:
                id: mon
                hint_text: 'MM'
                input_filter: 'int'
                text: 
            DesignerLabelTitle:
                size_hint_x: .1
                text: '-'
            DesignerTextInput:
                id: year
                hint_text: 'YYYY'
                input_filter: 'int'
                text: 
    BoxLayout:                                # DEPARTURE TIME INPUT
        spacing: designer_spacing
        BoxLayout:
            orientation: 'vertical'
            spacing: designer_spacing
            padding: designer_padding
            BoxLayout:
                size_hint_y: None
                height: designer_height
                DesignerLabel:
                    text: 'TIME:'
            BoxLayout:
                size_hint_y: None
                height: designer_height
                DesignerTextInput:
                    id: hour
                    hint_text: 'HH'
                    input_filter: 'int'
                    text: 
                DesignerLabelTitle:
                    size_hint_x: .2
                    text: ':'
                DesignerTextInput:
                    id: mins
                    hint_text: 'MM'
                    input_filter: 'int'
                    text: 
        BoxLayout:                         # DEPARTURE TIME ZONE INPUT
            orientation: 'vertical'
            spacing: designer_spacing
            padding: designer_padding
            BoxLayout:
                size_hint_y: None
                height: designer_height
                DesignerLabel:
                    text: 'TIME ZONE:'
            BoxLayout:
                size_hint_y: None
                height: designer_height
                DesignerSpinner:
                    id: tzsign
                DesignerTextInput:
                    id: tzhour
                    hint_text: 'HH'
                    input_filter: 'int'
                    text: 
                DesignerLabelTitle:
                    size_hint_x: .15
                    text: ':'
                DesignerTextInput:
                    id: tzmin
                    hint_text: 'MM'
                    input_filter: 'int'
                    text: 